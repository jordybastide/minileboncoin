{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="w-100 d-flex mx-auto mt-3">
        <h1 class="mt-3 mx-auto">Catégorie {{ category.name }}</h1>
    </div>
    <div class="mt-5">
        <img class="img-fluid mx-auto d-flex" src="{{ category.thumbnail }}" style="width: 30em;" alt="photo de {{ category.name }}">
    </div>
    <div class="d-flex w-100 mt-5 flex-column">
        <div class="mx-auto">
            <a class="btn btn-success" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
        </div>
        <div class="mx-auto mt-5">
            {{ include('admin/category/_delete_form.html.twig') }}
        </div>
        <div class="mx-auto mt-5">
            <a class="btn btn-warning text-light" href="{{ path('category_index') }}">Retour</a>
        </div>
    </div>
</div>
{% endblock %}
