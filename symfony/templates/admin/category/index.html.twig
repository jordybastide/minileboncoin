{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="w-100 d-flex mx-auto mt-3">
        <h1 class="mt-3 mx-auto">Les Catégories</h1>
    </div>
    <div class="w-100 d-flex mx-auto mt-3">
        <a class="btn btn-success text-light mx-auto" href="{{ path('category_new') }}">Créer une catégorie</a>
    </div>
    <div class="w-100 d-flex container flex-column mx-auto mt-3">
        {% for category in categories %}
            <div class="card mx-auto mt-3" style="max-width: 30rem;">
                <img src="{{ category.thumbnail }}" class="img-fluid card-img-top" alt="photo de {{ category.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ category.name }}</h5>
                    <div class="d-flex justify-content-around">
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-primary">Voir</a>
                        <a href="{{ path('category_edit', {'id': category.id}) }}"class="btn btn-success">Modifier</a>
                        {{ include('admin/category/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        {% else %}
            <div>
                <p>Aucune catégorie trouvée</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
