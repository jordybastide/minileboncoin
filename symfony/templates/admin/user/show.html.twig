{% extends 'base.html.twig' %}

{% block title %}Utilisateur {{ user.nickname }}{% endblock %}

{% block body %}
<div class="container">
    <div class="w-100 d-flex mx-auto mt-3">
        <h1 class="mt-3 mx-auto">Utilisateur {{user.nickname}}</h1>
    </div>

    <table class="table container">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {# <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr> #}
            <tr>
                <th>Nickname</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex w-100 mt-5 flex-column">
        <div class="mx-auto">
            <a class="btn btn-success" href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>
        </div>
        <div class="mx-auto mt-5">
            {{ include('admin/user/_delete_form.html.twig') }}
        </div>
        <div class="mx-auto mt-5">
            <a class="btn btn-warning text-light" href="{{ path('admin_user_index') }}">Retour</a>
        </div>
    </div>
</div>
{% endblock %}
