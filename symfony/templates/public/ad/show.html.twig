{% extends 'base.html.twig' %}

{% block title %}{{ ad.title }}{% endblock %}

{% block body %}
<div class="container">
     <div class="w-100 d-flex mx-auto mt-3">
          <h1 class="mt-3 mx-auto">{{ ad.title }}</h1>
     </div>
     <div class="mt-5">
          <img class="mx-auto d-flex" src="{{ ad.thumbnail }}" style="width: 30em;" alt="photo de {{ ad.title }}">
     </div>
     <div>
          <p><i>Publiée le :</i></p>
          <p>{{ ad.createdAt ? ad.createdAt|date('Y-m-d H:i:s') : '' }}</p>
     </div>
     <div class="mt-3">
          <p>Description :</p>
          <p>{{ ad.content }}</p>
     </div>
     <div>
          <p>Prix :</p>
          <p>{{ ad.price }}</p>
     </div>
     <div>
          <p>Ville :</p>
          <p>{{ ad.city }}</p>
     </div>
     <div>
          <p>Telephone :</p>
          <p>{{ ad.phone }}</p>
     </div>
     <div>
          {% if ad.user %}
          <p>Postée par :</p>
          <p>{{ad.user.nickname}}</p>
          <p>Email :</p>
          <p>{{ad.user.email}}</p>
          {% endif %}
     </div>
     <div class="d-flex w-100 mt-5 flex-column">
          <div class="mx-auto mt-5">
               <a class="btn btn-warning text-light" href="{{ path('index') }}">Retour</a>
          </div>
     </div>
</div>
{% endblock %}
